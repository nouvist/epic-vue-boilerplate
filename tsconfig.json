{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["DOM", "ES6"],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_nodules", "dist"]
}
